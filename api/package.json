{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "nodemonConfig": {
    "exec": "yarn dev",
    "watch": [
      "src/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "scripts": {
    "start": "yarn build && yarn migrate && node ./build/index.js",
    "clean": "rm -rf build && mkdir build",
    "build": "rm -rf build && babel -d ./build ./src -s",
    "dev": "yarn migrate && babel-node ./src/index.js",
    "migrate": "node_modules/.bin/sequelize db:migrate",
    "watch:dev": "nodemon",
    "test": "NODE_ENV=test jest --runInBand --detectOpenHandles",
    "test:watch": "jest --watch --coverage --colors --runInBand --detectOpenHandles",
    "test:coverage": "NODE_ENV=test yarn drop:db && yarn create:db && jest --coverage --colors --runInBand --testTimout=10000 --forceExit --detectOpenHandles",
    "drop:db": "NODE_ENV=test node_modules/.bin/sequelize db:drop tts_test",
    "create:db": "NODE_ENV=test node_modules/.bin/sequelize db:create tts_test",
    "format": "prettier --write \"src/**/*.js\"",
    "eslint-fix": "eslint --fix \"src/**/*.js\"",
    "lint": "eslint . --ingore-path .eslintignore",
    "publishToHeroku": "cd ../ && git push https://git.heroku.com/tvts-api.git `git subtree split --prefix api main`:main --force || true"
  },
  "dependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/node": "^7.14.7",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.14.7",
    "@babel/register": "^7.14.5",
    "@babel/runtime": "^7.14.6",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^10.0.0",
    "express": "~4.16.1",
    "morgan": "~1.9.1",
    "pg": "^8.6.0",
    "sequelize": "^6.6.5",
    "sequelize-cli": "^6.2.0"
  },
  "devDependencies": {
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.3",
    "enzyme": "^3.11.0",
    "eslint": "^7.31.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "faker": "^5.5.3",
    "jest": "^27.0.6",
    "jest-canvas-mock": "^2.3.1",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "supertest": "^6.1.4"
  },
  "jest": {
    "setupFiles": [
      "jest-canvas-mock",
      "<rootDir>/window.setup.js"
    ],
    "testEnvironment": "node",
    "modulePaths": [
      "src",
      "__tests__"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "ts",
      "tsx",
      "node"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.js",
      "<rootDir>/src/**/*.jsx",
      "!<rootDir>/src/index.js",
      "!<rootDir>/coverage/**/*.*",
      "!<rootDir>/build/**/*.*",
      "!<rootDir>/cypress/**/*.*",
      "!<rootDir>/src/sequelize/migrations/**/*.*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 90,
        "statements": 90
      }
    },
    "moduleNameMapper": {
      "\\.(jpg|JPG|ico|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss|less)$": "<rootDir>/__mocks__/styleMock.js"
    }
  }
}
